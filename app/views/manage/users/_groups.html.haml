#change-groups.row.emboss.margin-bottom-xxs
  .row.padding-inset-s
    .col1of2
      %strong.font-size-m= _("Entitlement-Groups")
    .col1of2.text-align-right
      %input{type: "text", name: "name", placeholder: _("Entitlement-Group"), autocomplete: :off}

  .row.list-of-lines.even{:"data-group-list" => true}

    = render partial: "group_inline_entry", collection: @user.entitlement_groups, as: :group unless @user.entitlement_groups.blank?
